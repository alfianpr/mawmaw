---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title="Portfolio | Mawmaw Studio" 
			description="Explore our portfolio of 3D design and interior projects"
		/>
	</head>
	<body>
		<Header />
		<main>
			<h1>Our Portfolio</h1>
			<p class="portfolio-intro">
				Discover our collection of innovative designs and creative solutions.
				Each project represents our commitment to excellence and attention to detail.
			</p>

			<div class="portfolio-grid">
				<!-- Featured Project - Large -->
				<article class="portfolio-item featured">
					<img src="https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg" alt="Modern Minimalist Living Room" />
					<div class="portfolio-content">
						<h2>Modern Minimalist Living Room</h2>
						<p class="category">3D Visualization & Interior Design</p>
						<p class="description">
							A contemporary living space that combines clean lines with warm textures,
							creating a perfect balance between comfort and style. The design focuses
							on maximizing natural light and spatial flow.
						</p>
						<ul class="features">
							<li>Custom furniture design</li>
							<li>Natural light optimization</li>
							<li>Integrated storage solutions</li>
						</ul>
					</div>
				</article>

				<!-- Two Column Layout -->
				<div class="two-column">
					<article class="portfolio-item">
						<img src="https://images.pexels.com/photos/1643383/pexels-photo-1643383.jpeg" alt="Contemporary Kitchen" />
						<div class="portfolio-content">
							<h2>Contemporary Kitchen</h2>
							<p class="category">Interior Design & Space Planning</p>
							<p class="description">
								A functional yet elegant kitchen design that incorporates modern appliances
								with sleek cabinetry.
							</p>
						</div>
					</article>

					<article class="portfolio-item">
						<img src="https://images.pexels.com/photos/1571468/pexels-photo-1571468.jpeg" alt="Luxury Bathroom Suite" />
						<div class="portfolio-content">
							<h2>Luxury Bathroom Suite</h2>
							<p class="category">3D Rendering & Design</p>
							<p class="description">
								A spa-like bathroom retreat featuring premium materials and sophisticated fixtures.
							</p>
						</div>
					</article>
				</div>

				<!-- Full Width Project -->
				<article class="portfolio-item full-width">
					<img src="https://images.pexels.com/photos/276583/pexels-photo-276583.jpeg" alt="Modern Office Space" />
					<div class="portfolio-content">
						<h2>Modern Office Space</h2>
						<p class="category">Space Planning & 3D Design</p>
						<p class="description">
							A collaborative workspace design that promotes productivity and creativity.
							The layout optimizes flow while maintaining individual focus areas.
						</p>
						<ul class="features">
							<li>Flexible workstations</li>
							<li>Collaborative areas</li>
							<li>Acoustic solutions</li>
						</ul>
					</div>
				</article>

				<!-- Three Column Layout -->
				<div class="three-column">
					<article class="portfolio-item">
						<img src="https://images.pexels.com/photos/1571467/pexels-photo-1571467.jpeg" alt="Outdoor Living Area" />
						<div class="portfolio-content">
							<h2>Outdoor Living</h2>
							<p class="category">Architectural Visualization</p>
						</div>
					</article>

					<article class="portfolio-item">
						<img src="https://images.pexels.com/photos/1571458/pexels-photo-1571458.jpeg" alt="Modern Bedroom" />
						<div class="portfolio-content">
							<h2>Modern Bedroom</h2>
							<p class="category">Interior Design</p>
						</div>
					</article>

					<article class="portfolio-item">
						<img src="https://images.pexels.com/photos/1571463/pexels-photo-1571463.jpeg" alt="Home Office" />
						<div class="portfolio-content">
							<h2>Home Office</h2>
							<p class="category">Space Planning</p>
						</div>
					</article>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: 1200px;
		max-width: calc(100% - 2em);
		margin: auto;
		padding: 3em 1em;
	}
	h1 {
		text-align: center;
		margin-bottom: 0.5em;
	}
	.portfolio-intro {
		text-align: center;
		max-width: 720px;
		margin: 0 auto 3em;
		color: rgb(var(--gray));
	}
	.portfolio-grid {
		display: grid;
		gap: 2em;
	}
	.portfolio-item {
		background: white;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: var(--box-shadow);
	}
	.portfolio-item img {
		width: 100%;
		object-fit: cover;
		display: block;
	}
	.portfolio-content {
		padding: 1.5em;
	}
	.portfolio-content h2 {
		margin: 0 0 0.5em;
		color: var(--accent);
		font-size: 1.5em;
	}
	.category {
		color: rgb(var(--gray));
		font-size: 0.9em;
		margin: 0 0 1em;
	}
	.description {
		margin-bottom: 1.5em;
		line-height: 1.6;
	}
	.features {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 0.5em;
	}
	.features li {
		padding-left: 1.5em;
		position: relative;
	}
	.features li::before {
		content: "â€¢";
		color: var(--accent);
		position: absolute;
		left: 0;
	}

	/* Featured Project */
	.featured {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 2em;
	}
	.featured img {
		height: 600px;
		border-radius: 12px 0 0 12px;
	}

	/* Two Column Layout */
	.two-column {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2em;
	}
	.two-column img {
		height: 300px;
	}

	/* Full Width Project */
	.full-width {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2em;
	}
	.full-width img {
		height: 400px;
		border-radius: 12px 0 0 12px;
	}

	/* Three Column Layout */
	.three-column {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		gap: 2em;
	}
	.three-column img {
		height: 250px;
	}
	.three-column .portfolio-content {
		padding: 1em;
	}
	.three-column h2 {
		font-size: 1.2em;
	}

	@media (max-width: 1024px) {
		.featured, .full-width {
			grid-template-columns: 1fr;
		}
		.featured img, .full-width img {
			height: 400px;
			border-radius: 12px 12px 0 0;
		}
		.two-column, .three-column {
			grid-template-columns: 1fr 1fr;
		}
	}

	@media (max-width: 768px) {
		.two-column, .three-column {
			grid-template-columns: 1fr;
		}
		.portfolio-item img {
			height: 300px;
		}
	}
</style>