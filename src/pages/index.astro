---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1>Welcome to Maw maw Studio</h1>
			<p>
				We are a creative design studio specializing in 3D design and interior spaces that inspire and transform.
			</p>

			<section class="showcase">
				<h2>Featured Projects</h2>
				<div class="showcase-grid">
					<div class="showcase-item">
						<img src="https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg" alt="Modern living room with minimalist design" />
						<h3>Modern Minimalist Living Room</h3>
						<p>3D visualization & Interior Design</p>
					</div>
					<div class="showcase-item">
						<img src="https://images.pexels.com/photos/1643383/pexels-photo-1643383.jpeg" alt="Contemporary kitchen design" />
						<h3>Contemporary Kitchen</h3>
						<p>Interior Design & Space Planning</p>
					</div>
					<div class="showcase-item">
						<img src="https://images.pexels.com/photos/1571468/pexels-photo-1571468.jpeg" alt="Luxury bathroom design" />
						<h3>Luxury Bathroom Suite</h3>
						<p>3D Rendering & Design</p>
					</div>
					<div class="showcase-item">
						<img src="https://images.pexels.com/photos/276583/pexels-photo-276583.jpeg" alt="Office space design" />
						<h3>Modern Office Space</h3>
						<p>Space Planning & 3D Design</p>
					</div>
					<div class="showcase-item">
						<img src="https://images.pexels.com/photos/1571467/pexels-photo-1571467.jpeg" alt="Outdoor living space" />
						<h3>Outdoor Living Area</h3>
						<p>Architectural Visualization</p>
					</div>
				</div>
			</section>

			<section class="services">
				<h2>Our Services</h2>
				<ul>
					<li>3D Design</li>
					<li>Interior Design</li>
					<li>Architectural Visualization</li>
					<li>Space Planning</li>
				</ul>
			</section>
			<section class="about-preview">
				<h2>About Us</h2>
				<p>
					At Maw maw Studio, we believe in the power of thoughtful design to transform spaces into extraordinary experiences. 
					Our team combines artistic vision with technical expertise to create stunning environments that inspire.
				</p>
				<a href="/about" class="button">Learn More About Us</a>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.showcase {
		margin: 4em 0;
	}
	.showcase h2 {
		text-align: center;
		margin-bottom: 1.5em;
	}
	.showcase-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2em;
	}
	.showcase-item {
		background: white;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: var(--box-shadow);
		transition: transform 0.2s;
	}
	.showcase-item:hover {
		transform: translateY(-5px);
	}
	.showcase-item img {
		width: 100%;
		height: 250px;
		object-fit: cover;
		border-radius: 12px 12px 0 0;
	}
	.showcase-item h3 {
		margin: 1em;
		font-size: 1.2em;
		color: var(--accent);
	}
	.showcase-item p {
		margin: 0 1em 1em;
		font-size: 0.9em;
		color: rgb(var(--gray));
	}
	.services {
		margin: 3em 0;
	}
	.services ul {
		list-style: none;
		padding: 0;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1em;
	}
	.services li {
		padding: 1em;
		background: white;
		border-radius: 8px;
		box-shadow: var(--box-shadow);
		text-align: center;
	}
	.about-preview {
		margin: 3em 0;
	}
	.button {
		display: inline-block;
		padding: 0.8em 1.6em;
		background-color: var(--accent);
		color: white;
		text-decoration: none;
		border-radius: 4px;
		transition: background-color 0.2s;
	}
	.button:hover {
		background-color: var(--accent-dark);
		color: white;
	}
</style>