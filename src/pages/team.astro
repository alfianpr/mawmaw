---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Our Team | Mawmaw Studio" description="Meet our talented team of designers" />
	</head>
	<body>
		<Header />
		<main>
			<h1>Meet Our Team</h1>
			<p class="team-intro">
				Our talented designers bring together creativity, technical expertise, and passion
				to deliver exceptional design solutions for our clients.
			</p>

			<div class="team-grid">
				<div class="team-member">
					<img src="https://images.pexels.com/photos/2379004/pexels-photo-2379004.jpeg" alt="Sarah Johnson" />
					<h2>Sarah Johnson</h2>
					<p class="role">Lead Interior Designer</p>
					<p class="bio">
						Specializing in modern residential spaces with over 8 years of experience
						in creating harmonious living environments.
					</p>
					<div class="social-links">
						<a href="https://instagram.com/sarahj.design" target="_blank" class="social-link">Instagram</a>
						<a href="https://behance.net/sarahjohnson" target="_blank" class="social-link">Behance</a>
					</div>
				</div>

				<div class="team-member">
					<img src="https://images.pexels.com/photos/3760263/pexels-photo-3760263.jpeg" alt="Michael Chen" />
					<h2>Michael Chen</h2>
					<p class="role">3D Visualization Artist</p>
					<p class="bio">
						Expert in architectural visualization and 3D rendering, bringing architectural
						concepts to life with stunning detail.
					</p>
					<div class="social-links">
						<a href="https://instagram.com/chen.3d" target="_blank" class="social-link">Instagram</a>
						<a href="https://artstation.com/michaelchen" target="_blank" class="social-link">ArtStation</a>
					</div>
				</div>

				<div class="team-member">
					<img src="https://images.pexels.com/photos/3775131/pexels-photo-3775131.jpeg" alt="Emma Rodriguez" />
					<h2>Emma Rodriguez</h2>
					<p class="role">Space Planning Specialist</p>
					<p class="bio">
						Passionate about creating functional and beautiful spaces that perfectly
						balance form and function.
					</p>
					<div class="social-links">
						<a href="https://instagram.com/emma.spaces" target="_blank" class="social-link">Instagram</a>
						<a href="https://linkedin.com/in/emmarodriguez" target="_blank" class="social-link">LinkedIn</a>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		width: 960px;
		max-width: calc(100% - 2em);
		margin: auto;
		padding: 3em 1em;
	}
	h1 {
		text-align: center;
		margin-bottom: 0.5em;
	}
	.team-intro {
		text-align: center;
		max-width: 720px;
		margin: 0 auto 3em;
		color: rgb(var(--gray));
	}
	.team-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2em;
		padding: 1em 0;
	}
	.team-member {
		background: white;
		border-radius: 12px;
		overflow: hidden;
		box-shadow: var(--box-shadow);
		text-align: center;
		padding-bottom: 1.5em;
	}
	.team-member img {
		width: 100%;
		height: 300px;
		object-fit: cover;
	}
	.team-member h2 {
		margin: 1em 0 0.2em;
		font-size: 1.5em;
		color: var(--accent);
	}
	.role {
		color: rgb(var(--gray));
		font-size: 0.9em;
		margin: 0 0 1em;
	}
	.bio {
		padding: 0 1.5em;
		margin-bottom: 1.5em;
		font-size: 0.95em;
	}
	.social-links {
		display: flex;
		gap: 1em;
		justify-content: center;
	}
	.social-link {
		display: inline-block;
		padding: 0.5em 1em;
		background-color: rgb(var(--gray-light));
		color: rgb(var(--gray-dark));
		text-decoration: none;
		border-radius: 4px;
		font-size: 0.9em;
		transition: all 0.2s ease;
	}
	.social-link:hover {
		background-color: var(--accent);
		color: white;
	}
	@media (max-width: 720px) {
		.team-grid {
			grid-template-columns: 1fr;
		}
	}
</style>